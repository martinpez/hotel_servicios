<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbd5e1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_linear"
        android:layout_width="277dp"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingTop="25dp"
        app:srcCompat="@drawable/circulo_de_usuario" />

    <EditText
        android:id="@+id/input_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="bottom"
        android:hint="name@flowbite.com"
        android:inputType="text|textEmailAddress"
        android:textColor="@color/cafe_os"
        android:textColorHint="@color/gray" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="303dp"
        android:layout_height="6dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="bottom"
        android:hint="Name"
        android:inputType="text"
        android:textColor="@color/cafe_os"
        android:textColorHint="@color/gray" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="301dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="bottom"
        android:hint="● ● ● ● ● ● ● ● ● ● ● ● ● ●"
        android:inputType="textPassword"
        android:textColor="@color/cafe_os"
        android:textColorHint="@color/gray" />

    <TextView
        android:id="@+id/txt_forgot"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="@string/txt_forgot"
        android:textAlignment="gravity"
        android:textColor="@color/cafe"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnlinear"
        android:layout_width="273dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/btnlinear"
        android:textColor="@color/cafe"
        app:cornerRadius="@android:dimen/system_app_widget_background_radius" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="19dp"
        android:layout_weight="1"
        android:autoText="false"
        android:gravity="bottom"
        android:paddingBottom="20dp"
        android:text="@string/txt_reserver"
        android:textAlignment="gravity"
        android:textColor="@color/cafe"
        android:textSize="12sp" />

</LinearLayout>